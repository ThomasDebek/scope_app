<p id="notice"><%= notice %></p>





<ul>
  <li <% if params[:action] == 'index' %>          class="active" <%end %>> <%=  link_to 'All articles',                  products_path %>  </li>
  <li <% if params[:action] == 'published' %>      class="active" <%end %>> <%=  link_to 'Only published age exist',      published_products_path %> </li>
  <li <% if params[:action] == 'name' %>           class="active" <%end %>> <%=  link_to 'Only without name',             name_products_path %> </li>
  <li <% if params[:action] == 'date' %>           class="active" <%end %>> <%=  link_to 'Only date exist',               date_products_path %> </li>



</ul>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Age</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.surname %></td>
        <td><%= product.age  %></td>
        <td><%= product.date ? 'Yes' : 'No' %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

